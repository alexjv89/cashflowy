<%	
	var create_or_edit = GeneralService.createOrEdit(req.url);
%>
<div class="ui container">
	<div class="ui grid">
		<div class='four wide tablet computer only column'></div>
		<div class='eight wide table eight wide computer sixteen wide mobile column'>
			<h4 class="ui horizontal divider header">
				<!-- <i class="list icon"></i> -->
				<%=create_or_edit%> a Profit and Loss statement
			</h4>
			<form class="ui <%=status%> form " action="" method='post'>
				<div class="field">
					<label>Name</label>
					<input type="text" name="name" placeholder="Main PnL" value="<%=pnl.name%>">
				</div>
				<!-- <div class="field">
					<label>Description</label>
					<input type="text" name="description" placeholder="Description" value="<%=pnl.description%>">
				</div> -->
				<table class="ui celled padded unstackable definition table" id='daily_report'>
					<thead>
						<th></th>
						<%pnl.statement.head.forEach(function(head){%>
							<th data-override="name">
								<%=head.name%> <a href="#" class='edit_row'><i class='pencil outline alternate outline icon'></i></a> | <a href="#" class='delete_row'><i class='red trash alternate outline icon'></i></a>
							</th>
						<%})%>
						
						<!-- <th data-override="time">Time (in mins)</th> -->
						<!-- <th data-override="status">Status (Open / Done)</th> -->
					</thead>
					<tbody>
						<tr>
							<td class='active'>Income</td>
							<td></td>
						</tr>
						<%pnl.statement.income.forEach(function(c){%>
							<tr>
								<td>
									<%=c.name%> <a href="#" class='edit_row'><i class='pencil alternate outline icon'></i></a> | <a href="#" class='delete_row'><i class='red trash alternate outline icon'></i></a>
								</td>
								<td></td>
							</tr>
						<%})%>
						<tr>
							<td class='active'>Expense</td>
							<td></td>
						</tr>
						<%pnl.statement.expense.forEach(function(c){%>
							<tr>
								<td>
									<%=c.name%> <a href="#" class='edit_row'><i class='pencil alternate outline icon'></i></a> | <a href="#" class='delete_row'><i class='red trash alternate outline icon'></i></a>
								</td>
								<td></td>
							</tr>
						<%})%>
						<!-- <tr>
							<td>Travel <a href="#" class='edit_row'><i class='pencil alternate outline icon'></i></a> | <a href="#" class='delete_row'><i class='red trash alternate outline icon'></i></a></td>
							<td></td>
							<td></td>
						</tr>
						<tr>
							<td>Food <a href="#" class='edit_row'><i class='pencil alternate outline icon'></i></a> | <a href="#" class='delete_row'><i class='red trash alternate outline icon'></i></a></td>
							<td></td>
							<td></td>
						</tr> -->
					</tbody>
				</table>
				<div class="ui error message">
					<div class="header">Error</div>
					<p><%=message%></p>
				</div>
				<button class='ui button'> New head</button>
				<input type="submit" class="ui button" value="Submit">
				<div class="ui success message">
					<div class="header">Subscription created</div>
					You just created a subscription
				</div>
			</form>
		</div>
		<div class='sixteen wide tablet four wide computer sixteen wide mobile column'>
			<!-- <div class='ui segment'>
				you are creating an email which we will keep listening for financial transactions
				<br/><br/>
				<b>Email:</b> 
				For now we support only gmail address. The gmail address can be a business gmail address also. 
				<br/><br/>
				<b>Token:</b>
				You will need to enter token detail here for now. It will be automated later. 
			</div> -->

		</div>
		<div class='sixteen wide column'>
			<pre><%=JSON.stringify(pnl,null,'    ')%></pre>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$('.dropdown').dropdown();
	})
</script>