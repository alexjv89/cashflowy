<div class="ui segment rule_set" data-rule-action='mark_as_transfer'>
    <input type="hidden" placeholder="type" name="details.action.set.type" value="transfer">
    <div class="field">
        <label>From Account:</label>
        <div class="ui fluid scrolling dropdown basic button <%=_.get(rule, 'details.trigger.condition.type', '') == 'expense'?'disabled':''%>" id='details.action.set.account'>
            <input type="hidden" name="details.action.set.account" value="<%=_.get(rule, 'details.action.set.account', '')%>">
            <i class="dropdown icon"></i>
            <div class="text"></div>
            <div class="menu transition hidden" tabindex="-1">
                <%accounts.forEach(function(a){%>
                    <div class="item" data-value='<%= a.id %>'>
                        <%= a.name %>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
    <div class="field">
        <label>To Account:</label>
        <div class="ui fluid scrolling dropdown basic button" id='details.action.set.to_account'>
            <input type="hidden" name="details.action.set.to_account" value="<%=_.get(rule, 'details.action.set.to_account', '')%>">
            <i class="dropdown icon"></i>
            <div class="text"></div>
            <div class="menu transition hidden" tabindex="-1">
                <%accounts.forEach(function(a){%>
                    <div class="item" data-value='<%= a.id %>'>
                        <%= a.name %>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
</div>

<div class="ui segment rule_set" data-rule-action='modify_pe_data'>
    <div class="field">
        <label>Account Last 4 Digits</label>
        <input type="number" placeholder="account" name="details.action.set.data.account_last_4_digits" value="<%=_.get(rule, 'details.action.set.data.account_last_4_digits', '')%>">
    </div>
</div>

<div class="ui segment rule_set" data-rule-action='apply_tags'>
    <div class="field">
        <label>Apply Tags</label>
        <div class='ui tags_dd fluid multiple search selection dropdown'>
            <input name='details.action.set.tags' type='hidden' value='<%=_.get(rule, 'details.action.set.tags', '')%>'>
            <i class='dropdown icon'></i>
            <input class='search' autocomplete='off' tabindex='0'><span class='sizer' style=''></span>
            <div class='default text'>Tags</div>
            <div class='menu transition hidden' tabindex='-1'>
                <%tags.forEach(function(tag){%>
                    <div class='item' data-value='<%=tag.id%>'><%=tag.name%></div>
                <%})%>
            </div>
        </div>
    </div>
</div>