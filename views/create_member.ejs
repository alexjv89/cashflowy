<%
	var create_or_edit = GeneralService.createOrEdit(req.url);
%>
<div class="ui container">
	<div class="ui grid">
		<div class='four wide tablet computer only column'></div>
		<div class='eight wide table eight wide computer sixteen wide mobile column'>
			<h4 class="ui horizontal divider header">
				<!-- <i class="list icon"></i> -->
				<%=create_or_edit%> Member
			</h4>
			<form class="ui <%=status%> form " action="" method='post'>
                <!-- <h4 class="ui dividing header">Shipping Information</h4> -->
                <div class="two fields">
                    <div class="field">
						<label>Email</label>
						<input value="" name="email" type="email"> 
                    </div>
                    <div class="field">
                        <label>Type</label>
                        <div class="ui fluid selection dropdown">
                            <input type="hidden" name="type" value="guest">
                            <i class="dropdown icon"></i>
                            <div class="default text">Choose permission</div>
                            <div class="menu">
                                <div class="item" data-value="admin">Admin</div>
                                <div class="item" data-value="contributor">Contributor</div>
                                <div class="item" data-value="guest">Guest</div>
                            </div>
                        </div>
                    </div>
				</div>
				<div class="ui error message">
					<div class="header">Error</div>
					<p><%=message%></p>
				</div>
				<input type="submit" class="ui button" value="Submit">
				<div class="ui success message">
					<div class="header">Org created</div>
					You just created a organisation
				</div>
			</form>
		</div>
		<div class='sixteen wide tablet four wide computer sixteen wide mobile column'>
			<div class='ui segment'>
				You are creating an member. 
				<br/><br/>
				<!-- <b>Email:</b> 
				For now we support only gmail address. The gmail address can be a business gmail address also. 
				<br/><br/>
				<b>Token:</b>
				You will need to enter token detail here for now. It will be automated later.  -->
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$('.dropdown').dropdown();
		$('.ui.form').form({
			fields: {
				user : 'empty',
			},
			onSuccess:function(e,fields){
				$(this).addClass('loading');
			},
		});
	})

</script>

