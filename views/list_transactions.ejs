												<span style='opacity: 0.5'>deposited to</span><br>
											<%}%>
											<p style="font-size: 0.8rem;"><%=t.account.name%></p>
										</div>
										<div class="column">
											<%if(t.type=='income_expense'){%> 
												<%if(t.original_amount<0){%> 
													<span style='opacity: 0.5'>to</span><br>
												<%}else{%>
													<span style='opacity: 0.5'>from</span><br>
												<%}%>
												<p style="font-size: 0.8rem;"><%=t.third_party%></p>
											<%}else{%>
												<span style='opacity: 0.5'>to</span><br>
												<p style="font-size: 0.8rem;"><%=t.account.name%></p>
											<%}%>
										</div>
									</div>
									<div class="ui divider" style="margin:0%;"></div>
									<%tlis.forEach(function(tli){%>
										<div class='tli row' data-tli-id='<%=tli.id%>'>
											<div class="three wide column">
												<!-- category  -->
