												<%if(tli.type=='income_expense'){
													if(tli.original_amount<0){%> 
														<span style='opacity: 0.5'>You paid</span><br>
														<b style='color:red' class="<%-tli.original_currency!='INR'?'popup':''%>"" data-html="INR <%=(-tli.amount_inr)%>"><%=tli.original_currency%> <%=(-tli.original_amount)%></b>
													<%}else{%>
														<span style='opacity: 0.5'>You got</span><br>
														<b style='color:#5bc5a2' class="<%-tli.original_currency!='INR'?'popup':''%>"" data-html="INR <%-tli.amount_inr%>"><%=tli.original_currency%> <%=(tli.original_amount)%></b>
													<%}
												}else{%>
													<span style='opacity: 0.5'>You transferred</span><br>
													<b style='' class="<%-tli.original_currency!='INR'?'popup':''%>"" data-html="INR <%=(-tli.amount_inr)%>"><%=tli.original_currency%> <%=(-tli.original_amount)%></b>
												<%}%>
											</div>
											<div class="two wide column">
												<%if(tli.original_amount<0){%> 
													<span style='opacity: 0.5'>from</span><br>
												<%}else{%>
													<span style='opacity: 0.5'>deposited to</span><br>
												<%}%>
												<%=tli.account.name%>
											</div>
											<div class="five wide column">
												<%if(tli.type=='income_expense'){%> 
													<%if(tli.original_amount<0){%> 
														<span style='opacity: 0.5'>to</span><br>
													<%}else{%>
														<span style='opacity: 0.5'>from</span><br>
													<%}%>
													<%=tli.third_party.substring(0, 30)+'..'%>
