										</div>
									<%})%>
								</div>
							</div>
						</div>
					</div>
					<%})%>
			<!-- </div> -->
		</div>
	</div>
</div>

<a class="circular ui icon right floated primary big button" href="/transaction/create" style="position:fixed;top:auto;left:auto;right:20px;bottom:20px;display:;" data-tooltip="Add new transaction" data-position="left center" data-inverted=""><i class="icon add"></i></a>
<script type="text/javascript">
	$(document).ready(function(){
		var edit_active=false;
		$('.edit').click(function(e){
			e.preventDefault();
			$(this).hide();
			var tli_id=$(this).attr('data-id');
			console.log('description clicked');
			console.log(tli_id);
			// if(!edit_active)
			$('div[data-tli-id='+tli_id+']').find('span.description').hide();
			$(this).parent().find('.edit_description').show();
			// edit_active=true;
		});
		$('.cancel_edit_desc').click(function(e){
			console.log('cancel button clicked');
			var tli_id=$(this).attr('data-id');
			// edit_active=false;
			$(this).parent().hide();
			$(this).parents('div[data-tli-id='+tli_id+']').find('span.description').show();
			$(this).parents('div[data-tli-id='+tli_id+']').find('.edit').show();
			// $(this).parents().find('.edit[data-id='+t_id+']').show();
		});
		$('.submit_edit_desc').click(function(e){
			console.log('submit button clicked');
			var tli_id=$(this).parents('.tli').attr('data-tli-id');
			console.log(tli_id);
			var description=$('.tli[data-tli-id='+tli_id+']').find('input[name=description]').val();
			$('.tli[data-tli-id='+tli_id+'] span.description').text(description);
			$('.tli[data-tli-id='+tli_id+'] span.description').show();
			// /api/edit_desc
			var button = this;
			$(button).addClass('loading');
			$(button).addClass('disabled');
			$.post("/api/edit_desc", {t: tli_id,description:description}, function(result,status){
			    console.log('result = '+result);
			    console.log('status = '+status);// this runs only on sucess
			    if(status=='success'){
			        $(button).removeClass('loading');
			        $(button).removeClass('disabled');
					$(button).parent().hide();
					$(button).parents().find('.edit[data-id='+tli_id+']').show();
			    }
			});
		});
		$('.category.dropdown').dropdown({
			onChange:function(value, text, $choice){
				var dd = this;
				$(this).addClass('disabled loading');
				var tli_id=$(this).parents('.tli').attr('data-tli-id');
				console.log(tli_id);
				$.ajax({
					url:"/tli/"+tli_id,
					data:{category: value},
					type:'PUT',
					success:function(response){
						console.log('success');
						$(dd).removeClass('disabled').removeClass('loading');
					},
					error:function(xhr, textStatus, errorThrown){
						console.log("An error occured: " + xhr.status + " " + xhr.statusText);
					}
				})
			}
		});
		$('.add_tags').click(function(e){
			e.preventDefault();
			$(this).parents('.tli').find('.tags').hide();
			console.log('hi');
			$(this).parents('.tli').find('.edit_tags').show();
		})
		$('.filter_txn.dropdown').dropdown({ allowCategorySelection: true });
		$('.extra_options.dropdown').dropdown();
		$('.filter.dropdown').dropdown({
			onChange:function(value, text, $choice){
				var params = {};
				if($('input[name="filter_account"]').val())
					params.account= $('input[name="filter_account"]').val();
				if($('input[name="filter_category"]').val())
				    params.category= $('input[name="filter_category"]').val();
				window.location = '/transactions?'+$.param(params);
			}
		});
		$('.tags_dd.ui.dropdown')
		  .dropdown({
		    allowAdditions: true,
		    onChange:function(value, text, $choice){
				$(this).parents('.add_tags_popup').find('.submit_edit_tags').removeClass('disabled');
			}
		  });
		$('.popup').popup();
		$('.add_tags2').popup({
			on:'click',
			popup: '.add_tags_popup'
		});
		$('.submit_edit_tags').click(function(e){
			$(this).addClass('disabled');
			var tli_id=$(this).parents('.tli').attr('data-tli-id');
			var tags_string=$(this).parents('.tli').find('.add_tags_popup').find('input[name=tags]').val();;
			console.log(tli_id);
			console.log(tags_string);
			var dd = this;
			$.ajax({
				url:"/api/edit_tags/",
				data:{new_tags: tags_string.split(','),tli_id:tli_id},
				type:'POST',
				success:function(response){
					console.log('success');
					// alert('updated tags');
					console.log(response);
					// $(dd).removeClass('disabled').removeClass('loading');
					$(dd).parents('.tli').find('.tags').html(response);
					// $(dd).parents('.transaction').find('span.tags').html('hello');
				},
				error:function(xhr, textStatus, errorThrown){
					console.log("An error occured: " + xhr.status + " " + xhr.statusText);
				}
			})
			// update the ui to include the tags.
			// update details on the backend. 
		})
		$('#submit_form').click(function(){
			console.log('clicked on form submit');
			$('input').each(function(i) {
		        var $input = $(this);
		        if ($input.val() == '')
		            $input.attr('disabled', 'disabled');
		    });
			$( "form" ).submit();
		});
		$('#reset_form').click(function(){
			window.location = '/transactions';
		});
		$('.show_details').click(function(e){
			e.preventDefault();
			// alert('show details clicked');
			console.log('show details clicked');
			var tli_id=$(this).parents('.tli').attr('data-tli-id');
			console.log(tli_id);
			$('#details_'+tli_id).toggle();
		})
		
	});
</script>
