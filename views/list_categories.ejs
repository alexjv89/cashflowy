<div class='ui container'>
	<div class='ui grid'>
		<!-- <div class='three wide tablet computer only column'></div> -->
		<div class='ten wide computer sixteen wide mobile  column'>
			
			<h1>Categories</h1>
			<table class="ui celled unstackable collapsing table" style="display: block;overflow-x:scroll;">
				<thead>
					<tr>
						<th class='single line'></th>
						<!-- <th>ID</th> -->
						<th>Name</th>
						<th>Parent</th>
						<th>Description</th>
						<th class="right aligned">Budget(INR)</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					<%parents.forEach(function(c){%>
						<tr data-tid='<%=c.id%>'>
							<td class="single line"><i class="icon caret right"></i></td>
							<!-- <td><%=c.id%></td> -->
							<td><a href="/category/<%=c.id%>"><%=c.name%></a></td>
							<td><%=c.parent?c.parent.name:''%></td>
							<td><%=c.description%></td>
							<td class="right aligned"><%=parseFloat(c.budget).toFixed(2)%></td>
							<td><a href="/category/<%=c.id%>/edit">edit</a></td>
							<td><a href="/category/<%=c.id%>/delete">delete</a></td>
						</tr>
						<% var parent = c;%>
						<%parent.children.forEach(function(c2){%>
							<tr data-tid='<%=c2.id%>'>
								<td class="single line">
									<i class="icon inverted caret right"></i>
									<i class="icon caret right"></i>
								</td>
								<!-- <td><%=c.id%></td> -->
								<td><a href="/category/<%=c2.id%>"><%=c2.name%></a></td>
								<td><%=parent.name%></td>
								<td><%=c2.description%></td>
								<td class="right aligned"><%=parseFloat(c2.budget).toFixed(2)%></td>
								<td><a href="/category/<%=c2.id%>/edit">edit</a></td>
								<td><a href="/category/<%=c2.id%>/delete">delete</a></td>
							</tr>
							<% var parent2 = c2;%>
							<%parent2.children.forEach(function(c3){%>
								<tr data-tid='<%=c3.id%>'>
									
									<td class="single line">
										<i class="icon inverted caret right"></i>
										<i class="icon inverted caret right"></i>
										<i class="icon caret right"></i>
									</td>
									<!-- <td><%=c.id%></td> -->
									<td><a href="/category/<%=c3.id%>"><%=c3.name%></a></td>
									<td><%=parent2.name%></td>
									<td><%=c3.description%></td>
									<td class="right aligned"><%=parseFloat(c3.budget).toFixed(2)%></td>
									<td><a href="/category/<%=c3.id%>/edit">edit</a></td>
									<td><a href="/category/<%=c3.id%>/delete">delete</a></td>
								</tr>
							<%})%>
						<%})%>
					<%})%>
				</tbody>
			</table>
			
		</div>
		<!-- <div class='three wide tablet computer only column'></div> -->
	</div>
</div>
<a class="circular ui icon right floated primary big button" href="/category/create" style="position:fixed;top:auto;left:auto;right:20px;bottom:20px;display:;" data-tooltip="Add new category" data-position="left center" data-inverted=""><i class="icon block layout"></i></a>
<script type="text/javascript">
	$(document).ready(function(){
		$('.popup').popup();
	});
</script>
